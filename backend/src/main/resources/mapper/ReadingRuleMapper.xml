<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunting.mapper.ReadingRuleMapper">

    <resultMap id="ReadingRuleResultMap" type="com.yunting.model.ReadingRule">
        <id property="ruleId" column="rule_id"/>
        <result property="pattern" column="pattern"/>
        <result property="ruleType" column="rule_type"/>
        <result property="ruleValue" column="rule_value"/>
        <result property="vocabularyId" column="vocabulary_id"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <insert id="insert" parameterType="com.yunting.model.ReadingRule" useGeneratedKeys="true" keyProperty="ruleId">
        INSERT INTO reading_rules (pattern, rule_type, rule_value, vocabulary_id, created_at, updated_at)
        VALUES (#{pattern}, #{ruleType}, #{ruleValue}, #{vocabularyId}, NOW(), NOW())
    </insert>

    <select id="selectById" parameterType="long" resultMap="ReadingRuleResultMap">
        SELECT * FROM reading_rules WHERE rule_id = #{ruleId}
    </select>

    <select id="selectList" resultMap="ReadingRuleResultMap">
        SELECT *
        FROM reading_rules
        <where>
            <if test="vocabularyId != null">
                vocabulary_id = #{vocabularyId}
            </if>
        </where>
        ORDER BY created_at DESC
    </select>

    <select id="selectExistingIds" resultType="long">
        SELECT rule_id
        FROM reading_rules
        WHERE rule_id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

</mapper>



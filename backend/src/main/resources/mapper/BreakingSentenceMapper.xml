<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunting.mapper.BreakingSentenceMapper">

    <resultMap id="BreakingSentenceResultMap" type="com.yunting.model.BreakingSentence">
        <id property="breakingSentenceId" column="breaking_sentence_id"/>
        <result property="taskId" column="task_id"/>
        <result property="originalSentenceId" column="original_sentence_id"/>
        <result property="content" column="content"/>
        <result property="charCount" column="char_count"/>
        <result property="sequence" column="sequence"/>
        <result property="synthesisStatus" column="synthesis_status"/>
        <result property="audioUrl" column="audio_url"/>
        <result property="audioDuration" column="audio_duration"/>
        <result property="ssml" column="ssml"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <insert id="insertBatch" parameterType="java.util.List">
        INSERT INTO breaking_sentences (task_id, original_sentence_id, content, char_count, sequence,
                                       synthesis_status, audio_url, audio_duration, ssml, created_at, updated_at)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.taskId}, #{item.originalSentenceId}, #{item.content}, #{item.charCount}, #{item.sequence},
             #{item.synthesisStatus}, #{item.audioUrl}, #{item.audioDuration}, #{item.ssml}, NOW(), NOW())
        </foreach>
    </insert>

    <select id="selectByTaskId" parameterType="long" resultMap="BreakingSentenceResultMap">
        SELECT * FROM breaking_sentences
        WHERE task_id = #{taskId}
        ORDER BY sequence ASC
    </select>

    <select id="countByTaskId" parameterType="long" resultType="int">
        SELECT COUNT(1) FROM breaking_sentences WHERE task_id = #{taskId}
    </select>
</mapper>


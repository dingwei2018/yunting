<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunting.mapper.OriginalSentenceMapper">

    <resultMap id="OriginalSentenceResultMap" type="com.yunting.model.OriginalSentence">
        <id property="originalSentenceId" column="original_sentence_id"/>
        <result property="taskId" column="task_id"/>
        <result property="content" column="content"/>
        <result property="charCount" column="char_count"/>
        <result property="sequence" column="sequence"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <insert id="insertBatch" parameterType="java.util.List">
        INSERT INTO original_sentences (task_id, content, char_count, sequence, created_at)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.taskId}, #{item.content}, #{item.charCount}, #{item.sequence}, NOW())
        </foreach>
    </insert>

    <select id="selectByTaskId" parameterType="long" resultMap="OriginalSentenceResultMap">
        SELECT * FROM original_sentences
        WHERE task_id = #{taskId}
        ORDER BY sequence ASC
    </select>

    <select id="selectPageByTaskId" resultMap="OriginalSentenceResultMap">
        SELECT * FROM original_sentences
        WHERE task_id = #{taskId}
        ORDER BY sequence ASC
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <select id="countByTaskId" parameterType="long" resultType="long">
        SELECT COUNT(1) FROM original_sentences WHERE task_id = #{taskId}
    </select>
</mapper>


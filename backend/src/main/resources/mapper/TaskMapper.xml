<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunting.mapper.TaskMapper">

    <resultMap id="TaskResultMap" type="com.yunting.model.Task">
        <id property="taskId" column="task_id"/>
        <result property="content" column="content"/>
        <result property="charCount" column="char_count"/>
        <result property="status" column="status"/>
        <result property="mergedAudioUrl" column="merged_audio_url"/>
        <result property="mergedAudioDuration" column="merged_audio_duration"/>
        <result property="breakingStandardId" column="breaking_standard_id"/>
        <result property="charCountLimit" column="char_count_limit"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <insert id="insert" parameterType="com.yunting.model.Task" useGeneratedKeys="true" keyProperty="taskId">
        INSERT INTO tasks (content, char_count, status, merged_audio_url, merged_audio_duration,
                          breaking_standard_id, char_count_limit, created_at, updated_at)
        VALUES (#{content}, #{charCount}, #{status}, #{mergedAudioUrl}, #{mergedAudioDuration},
                #{breakingStandardId}, #{charCountLimit}, NOW(), NOW())
    </insert>

    <select id="selectById" parameterType="long" resultMap="TaskResultMap">
        SELECT * FROM tasks WHERE task_id = #{taskId}
    </select>

    <select id="selectList" resultMap="TaskResultMap">
        SELECT * FROM tasks
        <where>
            <if test="status != null">
                status = #{status}
            </if>
        </where>
        ORDER BY created_at DESC
        LIMIT #{offset}, #{pageSize}
    </select>

    <select id="countByStatus" resultType="long">
        SELECT COUNT(1) FROM tasks
        <where>
            <if test="status != null">
                status = #{status}
            </if>
        </where>
    </select>

    <update id="updateBreakingStandard">
        UPDATE tasks
        SET breaking_standard_id = #{breakingStandardId},
            char_count_limit = #{charCountLimit},
            updated_at = NOW()
        WHERE task_id = #{taskId}
    </update>

    <update id="updateById" parameterType="com.yunting.model.Task">
        UPDATE tasks
        SET merged_audio_url = #{mergedAudioUrl},
            merged_audio_duration = #{mergedAudioDuration},
            updated_at = NOW()
        WHERE task_id = #{taskId}
    </update>
</mapper>

